<!DOCTYPE html>
<html>
  <head>
    <title>RailsQuizShow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav id="navbar" class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">Quiz Show</a>
        </div>
        <ul class="nav navbar-nav">
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
          <li><%= link_to raw('<span class="glyphicon glyphicon-user"></span> ') + current_user.email, user_path(current_user) %></li>
          <li><%= link_to raw('<span class="glyphicon glyphicon-log-in"> ') + "Logout", logout_path, method: "delete" %></li>
          <% else %>
          <li><%= link_to raw('<span class="glyphicon glyphicon-log-in"> ') + "Login", login_path %></a></li>
          <li><%= link_to raw('<span class="glyphicon glyphicon-user"></span> ') + "Register", register_path %></a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
