<div class= "background-signup">
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Full Name:' %>
    <%= form.text_field :name, id: :user_name %>
  </div>
  <div class="field">
    <%= form.label 'Username:' %>
    <%= form.text_field :username, id: :user_username %>
  </div>
  <div class="field">
    <%= form.label 'Email:' %>
    <%= form.text_field :email, id: :user_email %>
  </div>
  <div class="field">
    <%= form.label 'Password:' %>
    <%= form.password_field :password, id: :post_password %>
  </div>
  <div class="field">
    <%= form.label 'Password Confirmation: '%>
    <%= form.password_field :password_confirmation, id: :post_password_confirmation %>
  </div>

<div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>

</div>
